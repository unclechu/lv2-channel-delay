@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix pg: <http://ll-plugins.nongnu.org/lv2/ext/portgroups#>.

@prefix p: <https://github.com/unclechu/lv2-channel-delay/channel-delay-stereo>.

p:in a pg:StereoGroup.
p:out a pg:StereoGroup.
p:
    a lv2:Plugin, lv2:MixerPlugin;
    lv2:binary <channel-delay.so>;
    doap:name "Channel Delay (Stereo)";
	doap:maintainer [ foaf:name "Viacheslav Lotsmanov"; ];
	doap:license <http://usefulinc.com/doap/licenses/lgpl>;

    lv2:port [
        a lv2:AudioPort, lv2:InputPort;
        lv2:index 0;
        lv2:symbol "input_l";
        lv2:name "Left input";
        pg:membership [
            pg:group p:in;
            pg:role pg:leftChannel;
        ];
    ], [
        a lv2:AudioPort, lv2:InputPort;
        lv2:index 1;
        lv2:symbol "input_r";
        lv2:name "Right input";
        pg:membership [
            pg:group p:in;
            pg:role pg:rightChannel;
        ];
    ], [
        a lv2:AudioPort, lv2:OutputPort;
        lv2:index 2;
        lv2:symbol "output_l";
        lv2:name "Left output";
        pg:membership [
            pg:group p:out;
            pg:role pg:leftChannel;
        ];
    ], [
        a lv2:AudioPort, lv2:OutputPort;
        lv2:index 3;
        lv2:symbol "output_r";
        lv2:name "Right output";
        pg:membership [
            pg:group p:out;
            pg:role pg:rightChannel;
        ];
    ], [
        a lv2:ControlPort, lv2:InputPort;
        lv2:index 4;
        lv2:symbol "gain_l";
        lv2:name "Gain L (dB)";
        lv2:minimum -90;
        lv2:maximum 12;
        lv2:default 0;
    ], [
        a lv2:ControlPort, lv2:InputPort;
        lv2:index 5;
        lv2:symbol "delay_l";
        lv2:name "Delay L (ms)";
        lv2:minimum 0;
        lv2:maximum 2000;
        lv2:default 0;
    ], [
        a lv2:ControlPort, lv2:InputPort;
        lv2:index 6;
        lv2:symbol "gain_r";
        lv2:name "Gain R (dB)";
        lv2:minimum -90;
        lv2:maximum 12;
        lv2:default 0;
    ], [
        a lv2:ControlPort, lv2:InputPort;
        lv2:index 7;
        lv2:symbol "delay_r";
        lv2:name "Delay R (ms)";
        lv2:minimum 0;
        lv2:maximum 2000;
        lv2:default 0;
    ].
